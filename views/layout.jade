doctype html
html
  head
    title= title
    script(src='http://code.jquery.com/jquery-1.11.1.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript' src='/javascripts/typeahead.bundle.js')
    script(type='text/javascript' src='/javascripts/typeahead.bundle.min.js')
    script(type='text/javascript' src='/javascripts/typeahead.jquery.js')
    script(type='text/javascript').
      $(document).ready(function(){
        var local = ["html","javascript","java","erlang","ebola"];
        var matcher = function(input) {
          return function findMatches(q, cb){
            var matches, substrRegex;

            matches = [];

            substrRegex = new RegExp(q, 'i');

            $.each(input, function(i, str){
              if (substrRegex.test(str)) {
                matches.push({ value: str});
              }
            });
            cb(matches);
          };
        }
        $('.typeahead').typeahead({
          minLength: 1,
          highlight: true
          hint: true
        },
        {
          name: 'suggestions',
          displayKey: 'value',
          source: matcher(local)
        });
      });
