extends ../layout

block content
  #search
    form(method="post" enctype="multipart/form-data" action="/search")
      #scrollable-dropdown-menu
        input(class='typeahead' type='text' value='search' name='query' onclick="if (this.defaultValue==this.value) this.value=''")
      input(type='submit' value='ok')
    
  h1 Wyszukiwanie Pozycji Budżetowych:
  br
  p Wyniki znalezione dla hasła '#{query}' (#{total})
  br
  if (data.length > 0)
    ol(start = start)
      each row in data
        if (row.type == "Nazwa zadania")
          li: a(href="/task/#{row.id}" class = 'search-result') #{row.text} - #{row.value} PLN
          a(href="/task/#{row.id}" class = 'search-result') #{row.type}
          br
          br
        else
          li: a(href="/task/#{row.id}" class = 'search-result') #{row.text} - #{row.value} PLN
          a(href="/task/#{row.id}" class = 'search-result') #{row.type}
          br
          br
    br
    if (next)
      a(href="/search/pages/#{page - 1}?query=" + query) Poprzedni
    |   
    if (prev)
      a(href="/search/pages/#{page + 1}?query=" + query) Następny
  else
    p Nie znaleziono wyników
  br
  a(href='/'): p Strona Główna
