extends layout

block content
  h1 Wyszukiwanie Pozycji Budżetowych:
  br
  p Wyniki znalezione dla hasła '#{query}' (#{total})
  br
  if (data.length > 0)
    ol(start = start)
      each row in data
        li #{row.text} - #{row.value} PLN
        | #{row.type}
        br
        br
    br
    if (next)
      a(href="/search/pages/#{page - 1}?query=" + query) Poprzedni
    |   
    if (prev)
      a(href="/search/pages/#{page + 1}?query=" + query) Następny
  else
    p Nie znaleziono wyników
  br
  a(href='/'): p Strona Główna